{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong> Wait! </strong> {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}

<div class="col-md-4 mx-auto mt-5 newNote">
    <div class="card nnContainer">
        <div class="card-header nnHeader">
            <h3 class="nnTitle">{{ pageTitle }}</h3>
        </div>
        <div class="card-body">
            <form action='{{formAction}}' method='{{formMethod}}'>
                <input type="hidden" name="_method" value="PUT" />
                <div class="form-group">
                    <input class="form-control mb-3" type="text" name="title"
                        placeholder="Inserta un título para tu nota" autofocus value='{{ title }}' />
                    <textarea class="form-control mb-3" name="description" cols="50" rows="4"
                        placeholder="¿Qué quieres registrar hoy?">{{ description }}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block nnSubmit" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>