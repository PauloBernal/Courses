<div class="container">
    <div class="row">
        <div class="col md-4 mx-auto">
            <div class="card mt-5 signInFrame">
                <div class="card-header signInHeader">
                    <h2 class="signInTitle">Sign In</h2>
                </div>
                <div class="card-body signInBody">
                    <form action="/users/signin" method="POST">
                        <div class="form-group">
                            <input type="text" name="username" class="form-control mb-4" placeholder="Email or username" autofocus>
                            <input type="password" name="password" class="form-control mb-4" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block mx-auto signInButton">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>