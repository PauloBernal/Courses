<div class="row mt-5 signUpFrame">
    <div class="col-md-4 mx-auto signUp">
        <div class="card signUpContainer">
            <div class="card-header signUpHeader">
                <h3 class="signUpTitle">Account Register</h3>
            </div>
            <div class="card-body signUpBody">
                <form action="/users/signup" method="POST">
                    <div class="form-group signUpInputs">
                        <input type="text" class="form-control mb-3" name="username" placeholder="Username" 
                        value="{{ username }}" required>
                        <input type="email" class="form-control mb-3" name="email" placeholder="Email"
                        value="{{ email }}" required>
                        <input type="password" class="form-control mb-3" name="password" placeholder="Password"
                            required>
                        <input type="password" class="form-control mb-3" name="cPassword" placeholder="Confirm password"
                            required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block signUpButton">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>